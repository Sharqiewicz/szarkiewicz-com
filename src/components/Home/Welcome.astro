---
import { Image } from 'astro:assets'
import MyPhoto from '../../assets/my-photo.png'
import WelcomeMePhoto from './WelcomeMePhoto.tsx'
---

<section class="w-full container mx-auto mt-10 flex flex-col md:flex-row">
        <div class="mb-10 md:mb-0 mx-auto w-full md:w-1/3 lg:w-1/2 flex flex-col items-center md:items-start justify-center md:max-w-96">
            <h1 class='text-3xl md:text-4xl lg:text-5xl mx-12 md:mx-0'>Letâ€™s build
                <span class="important">the best software</span>
                <span class="most-important">together.</span>
            </h1>
            <a href='/blog' class="read-blog-button hover:animate-pulse">Read Blog</a>
            <a href='https://www.youtube.com/@kszarkiewicz/featured' target="_blank" class='watch-youtube-button hover:animate-pulse'>Watch Youtube</a>
        </div>
        <div class='relative w-full md:w-2/3 lg:w-1/2 splash-container'>
            <WelcomeMePhoto client:load/>
            <Image
            class='absolute z-50 bottom-0 left-1/2 -translate-x-1/2'
                src={MyPhoto}
                alt="Photo of Kacper Szarkiewicz"
                style={{ userSelect: 'none', pointerEvents: 'none' }}
            />
        </div>
</section>

<style>

.splash-container{

    @media (max-width: 349px){
        overflow: hidden;
    }
}



.watch-youtube-button {
    width: 190px;
    text-align: center;
    background-color: transparent;
    padding: 10px ;
    border-radius: 10px;
    font-size: 1.2rem;
    margin-top: 20px;
    transition: all 0.2s ease-in-out;
    color: #000;
    border: 2px solid black;
}

:global(.dark) .watch-youtube-button{
    color: #fff;
    border: 2px solid white;
}

    .splash-container{
        max-width: 620px;
        height: 570px;
    }

    .important{
        color:#FFD705;
    }

    .most-important{
        color: #FA1DFF;
    }
</style>
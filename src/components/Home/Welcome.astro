---
import { Image } from 'astro:assets'
import Pink from '../../assets/pink-splash.svg'
import Blue from '../../assets/blue-splash.svg'
import Yellow from '../../assets/yellow-splash.svg'
import MyPhoto from '../../assets/my-photo.png'
---
<section class="w-full container mx-auto mt-10 flex flex-col md:flex-row">
        <div class="mx-auto w-full md:w-1/3 lg:w-1/2 flex flex-col justify-center items-center md:max-w-96">
            <h1 class='text-3xl md:text-4xl lg:text-5xl'>Letâ€™s build
                <span class="important">the best software</span>
                <span class="most-important">together.</span>
            </h1>
        </div>
        <div class='relative w-full md:w-2/3 lg:w-1/2 splash-container'>
            <Image src={Blue} alt="Blue splash"
            class='absolute left-0 md:left-16 top-0 z-20'
            />
            <Image src={Pink} alt="Pink splash"
            class='absolute left-0 md:left-20 bottom-0 z-30'
             />
            <Image src={Yellow} alt="Yellow splash"
            class='absolute right-0 top-0 z-40'
             />
            <Image
            class='absolute z-50 bottom-0 left-1/2 -translate-x-1/2'
                src={MyPhoto}
                alt="Photo of Kacper Szarkiewicz"
            />
            <h2
                class=" text-2xl lg:text-3xl z-50 absolute bottom-0 left-1/2 -translate-x-1/2 text-center"
            >Kacper Szarkiewicz</h2>
        </div>
</section>

<style>

    .splash-container{
        max-width: 620px;
    }

    .splash-container{
        height: 570px;
    }

    .important{
        color:#FFD705;
    }

    .most-important{
        color: #FA1DFF;
    }
</style>
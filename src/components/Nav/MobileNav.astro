---
import HeaderLink from '../HeaderLink.astro'
---

<div class='flex items-center md:hidden'>
  <button
    type='button'
    class='relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white'
    aria-controls='mobile-menu'
    aria-expanded='false'
    id='menu-button'
  >
    <span class='absolute -inset-0.5'></span>
    <span class='sr-only'>Open main menu</span>
    <svg
      class='block h-6 w-6'
      fill='none'
      viewBox='0 0 24 24'
      stroke-width='1.5'
      stroke='currentColor'
      aria-hidden='true'
      id='menu-icon'
    >
      <path
        id='path-open'
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5'></path>

      <path
        style='display: none;'
        id='path-close'
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M6 18L18 6M6 6l12 12'></path>
    </svg>
  </button>
  <div
    class='md:hidden absolute left-0 right-0 top-14 bottom-0'
    id='mobile-menu'
    style='display: none;'
  >
    <div
      class='flex-column absolute left-0 right-0 top-0 bottom-0 bg-white dark:bg-gray-900'
    >
      <HeaderLink
        href='/blog'
        class='text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium'
      >
        Blog
      </HeaderLink>
      <HeaderLink
        href='/blog'
        class='text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium'
      >
        Youtube
      </HeaderLink>
      <HeaderLink
        href='/blog'
        class='text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium'
      >
        Github
      </HeaderLink>
      <HeaderLink
        href='/about'
        class='text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium'
      >
        About
      </HeaderLink>
    </div>
  </div>
</div>

<script>
  const menuButton = document.getElementById('menu-button')
  const mobileMenu = document.getElementById('mobile-menu')

  function handleDisplayIcon(isOpen: boolean) {
    const openIcon = document.getElementById('path-open')
    const closeIcon = document.getElementById('path-close')
    if (openIcon && closeIcon)
      if (isOpen) {
        openIcon.style.display = 'block'
        closeIcon.style.display = 'none'
      } else {
        openIcon.style.display = 'none'
        closeIcon.style.display = 'block'
      }
  }

  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      const isOpen = mobileMenu.style.display === 'block'

      mobileMenu.style.display = isOpen ? 'none' : 'block'

      handleDisplayIcon(isOpen)
    })
  }
</script>
